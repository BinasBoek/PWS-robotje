#include <Servo.h>

Servo myServo1; 
Servo myServo2;
const int buttonPin = 3; 
const int servoPin1 = 2; 
const int servoPin2 = 4; 
const int trigPin = 9; 
const int echoPin = 10; 

int buttonState = 0;
int lastButtonState = 0; 
bool motorState = false; 

// Distance threshold for obstacle detection (in centimeters)
const int obstacleThreshold = 20;

void setup() {
  Serial.begin(9600);  // Initialize serial communication at 9600 baud rate
  myServo1.attach(servoPin1); 
  myServo2.attach(servoPin2);
  pinMode(buttonPin, INPUT_PULLUP); 
  pinMode(trigPin, OUTPUT);  // Set the trig pin as an output
  pinMode(echoPin, INPUT);   // Set the echo pin as an input

  myServo1.write(0);  // Initialize first servo to the 'off' position
  myServo2.write(0);  // Initialize second servo to the 'off' position
}

void loop() {
  buttonState = digitalRead(buttonPin); 

  if (buttonState == LOW && lastButtonState == HIGH) {
    delay(50);  // Debounce delay
    
    if (motorState == false) {
      motorState = true;
      myServo1.attach(servoPin1); 
      myServo2.attach(servoPin2); 
      myServo1.write(90); 
      myServo2.write(90);
      Serial.println("Motors ON"); 
    } else {
      motorState = false;
      myServo1.write(0); 
      myServo2.write(0); 
      myServo1.detach(); 
      myServo2.detach();  
      Serial.println("Motors OFF"); 
    }
  }

  // Obstacle detection logic
  long distance = measureDistance();
  if (distance < obstacleThreshold && motorState == true) { 
    Serial.println("Obstacle detected! Turning robot.");
    turnRobot(); 
  }

  lastButtonState = buttonState;
}

long measureDistance() {
  digitalWrite(trigPin, LOW); 
  delayMicroseconds(2); 
  digitalWrite(trigPin, HIGH); 
  delayMicroseconds(10); 
  digitalWrite(trigPin, LOW);

  // Read the echo pulse
  long duration = pulseIn(echoPin, HIGH); 
  long distance = duration * 0.034 / 2;  // Calculate the distance in cm

  return distance; 
}

void turnRobot() {
  myServo1.write(120); 
  myServo2.write(60); 
  delay(500);

  myServo1.write(90); 
  myServo2.write(90); 
  Serial.println("Turn complete.");
}
